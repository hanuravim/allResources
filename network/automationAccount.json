{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccount": {
            "type": "string"
        },
        "AzureRM.Profile_Module_URL": {
            "type": "string"
        },
        "AzureRM.Network_Module_URL": {
            "type": "string"
        },
        "RunbookURL": {
            "type": "string"
        }
    },
    "variables": {
        "powerShellGalleryModule1":"AzureRm.Profile",
        "powerShellGalleryModule2":"AzureRm.Network",

        "runbookDescription": "Configures the VNET for DNS server with Primary domain controller IP"
    },
    "resources": [
        {
            "name": "[parameters('automationAccount')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "location": "eastus2",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "sku": {
                    "name": "Free"
                }
            },
            "resources": []
        },
        {
            "name": "[concat(parameters('automationAccount'), '/', 'AzureRM.Profile')]",
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2015-10-31",
            "location": "eastus2",
            "properties": {
                "isGlobal": false,
                "sizeInBytes": 0,
                "contentLink": {
                    "uri": "[concat('https://www.powershellgallery.com/api/v2/package/', variables('powerShellGalleryModule1'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccount'))]"
            ]
        },
        {
            "name": "[concat(parameters('automationAccount'), '/', 'AzureRM.Network')]",
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2015-10-31",
            "location": "eastus2",
            "properties": {
                "isGlobal": false,
                "sizeInBytes": 0,
                "contentLink": {
                    "uri": "[concat('https://www.powershellgallery.com/api/v2/package/', variables('powerShellGalleryModule2'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccount'))]",
                "[concat(parameters('automationAccount'), '/', 'AzureRM.Profile')]"

            ]
        },
        {
            "name": "[concat(parameters('automationAccount'), '/', 'runbook')]",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "2018-06-30",
            "location": "eastus2",
            "dependsOn": [
                "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccount'))]"
            ],
            "tags": {},
            "properties": {
                "runbookType": "PowerShell",
                "logProgress": false,
                "logVerbose": false,
                "description": "[variables('runbookDescription')]",
                "publishContentLink": {
                    "uri": "[parameters('RunbookURL')]",
                    "version": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {}
}
