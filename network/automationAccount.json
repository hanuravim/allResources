{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccount": {
            "type": "string"
        },
        "AzureRM.profile_Module_URL": {
            "type": "string"
        },
        "AzureRM.Network_Module_URL": {
            "type": "string"
        },
        "RunbookURL": {
            "type": "string"
        }
    },
    "variables": {
        "runbookDescription": "Configures the VNET for DNS server with Primary domain controller IP",
        "sku": "Free"
    },
    "resources": [
        {
            "name": "[parameters('automationAccount')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "location": "eastus2",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "sku": {
                    "name": "[variables('sku')]"
                }
            },
            "resources": [
                {
                    "name": "vnetDNS",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "eastus2",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccount'))]"
                    ],
                    "tags": {},
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": false,
                        "logVerbose": false,
                        "description": "[variables('runbookDescription')]",
                        "publishContentLink": {
                            "uri": "[parameters('RunbookURL')]",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "name": "AzureRM.Profile",
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "location": "eastus2",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccount'))]"
                    ],
                    "tags": {},
                    "properties": {
                        "contentLink": {
                            "uri": "[parameters('AzureRM.profile_Module_URL')]"
                        }
                    }
                },
                {
                    "name": "AzureRM.Network",
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "location": "eastus2",
                    "dependsOn": [
                        "[parameters('automationAccount')]",
                        "AzureRM.Profile"
                    ],
                    "tags": {},
                    "properties": {
                        "contentLink": {
                            "uri": "[parameters('AzureRM.Network_Module_URL')]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {}
}
