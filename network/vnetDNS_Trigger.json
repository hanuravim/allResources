{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualmachineName": {
            "type": "string"
        },
        "vmCount": {
            "type": "int"
        },
        "CustomScriptFileName": {
            "type": "string"
        },
        "CustomScriptExtensionScriptFilePath": {
            "type": "string"
        },
        "appsecret": {
            "type": "string"
        },
        "applicationId": {
            "type": "string"
        },
        "tenantId": {
            "type": "string"
        },
        "automationAccountResourceGroup": {
            "type": "string"
        },
        "automationAccount": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('virtualmachineName'),copyindex(2),'/webhook')]",
            "copy": {
                "name": "webhookloop",
                "count": "[parameters('vmCount')]"
            },
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.9",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('CustomScriptExtensionScriptFilePath')]"
                    ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File',parameters('CustomScriptFileName'),'-appsecret',parameters('appsecret'),'-applicationId',parameters('applicationId'),'-tenantId',parameters('tenantId'),'-automationAccountResourceGroup',parameters('automationAccountResourceGroup'),'-automationAccount',parameters('automationAccount'))]"
                }
            }
        }
    ]
}
