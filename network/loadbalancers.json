{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "emsManagerILB": {
            "type": "object"
        },
        "emsManagerSubnetRef": {
            "type": "string"
        },
        "webapiILB":{
            "type":"object"
        },
        "webapiSubnetRef":{
            "type":"string"
        },
        "sqlILB":{
            "type":"object"
        },
        "sqlSubnetRef":{
            "type":"string"
        },
        "jumpboxILB":{
            "type":"object"
        },
        "jumpboxSubnetRef":{
            "type":"string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-03-01",
            "name": "[parameters('emsManagerILB').Name]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('emsManagerSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('emsManagerILB').IP]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-03-01",
            "name": "[parameters('webapiILB').Name]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('webapiSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('webapiILB').IP]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-03-01",
            "name": "[parameters('sqlILB').Name]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('sqlSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('sqlILB').IP]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-03-01",
            "name": "[parameters('jumpboxILB').Name]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('jumpboxSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('jumpboxILB').IP]"
                        }
                    }
                ]
            }
        }
    ]
}
