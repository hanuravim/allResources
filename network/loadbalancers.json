{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "emsManagerILB_Name": {
            "type": "string"
        },
        "emsManagerILB_IP": {
            "type": "string"
        },
        "emsManagerSubnetRef": {
            "type": "string"
        },
        "webapiILB_Name":{
            "type":"string"
        },
        "webapiILB_IP":{
            "type":"string"
        },
        "webapiSubnetRef":{
            "type":"string"
        },
        "sqlILB_Name":{
            "type":"string"
        },
        "sqlILB_IP":{
            "type":"string"
        },
        "sqlSubnetRef":{
            "type":"string"
        },
        "jumpboxILB_Name":{
            "type":"string"
        },
        "jumpboxILB_IP":{
            "type":"string"
        },
        "jumpboxSubnetRef":{
            "type":"string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-08-01",
            "name": "[parameters('emsManagerILB_Name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('emsManagerSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('emsManagerILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-08-01",
            "name": "[parameters('webapiILB_Name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('webapiSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('webapiILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-08-01",
            "name": "[parameters('sqlILB_Name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('sqlSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('sqlILB_IP')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-08-01",
            "name": "[parameters('jumpboxILB_Name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('jumpboxSubnetRef')]"
                            },
                            "privateIPAddress": "[parameters('jumpboxILB_IP')]"
                        }
                    }
                ]
            }
        }
    ]
}
